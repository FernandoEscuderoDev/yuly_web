---
import { urlForImage } from "./../sanity/lib/urlForImage";
import Picture from "astro/components/Picture.astro";

const {
  asset = "",
  alt = "Imagen sin texto Alternativo",
  classImg = "",
  imageHeight = 1920,
  imageWidth = 1920,
} = Astro.props;
---

<Picture
  class={classImg}
  src={urlForImage(asset)
    .width(1920)
    .height(Math.round((1920 * imageHeight) / imageWidth))
    .quality(70)
    .format("webp")
    .url()}
  width={500}
  height={500}
  alt={alt}
/>
