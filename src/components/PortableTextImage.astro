---
import { urlForImage } from "./../sanity/lib/urlForImage";
import Picture from "astro/components/Picture.astro";

const {
  asset = "",
  alt = "Imagen sin texto Alternativo",
  classImg = "",
  tamanio = 1920,
  imageHeight = 1920,
  imageWidth = 1920,
  calidad = 80,
} = Astro.props;

let height =
  tamanio == 1920 ? Math.round((tamanio * imageHeight) / imageWidth) : tamanio;
---

<Picture
  class={classImg}
  src={urlForImage(asset)
    .width(tamanio)
    .height(height)
    .quality(calidad)
    .format("webp")
    .url()}
  width={500}
  height={500}
  alt={alt}
/>
