---
import { urlForImage } from "./../sanity/lib/urlForImage";
import Picture from "astro/components/Picture.astro";

const {
  asset = "",
  alt = "Imagen sin texto Alternativo",
  classImg = "",
  tamanio = 1920,
  imageHeight = 1920,
  imageWidth = 1920,
  calidad = 80,
} = Astro.props;

const adjustedWidth = tamanio;
const adjustedHeight = Math.round((tamanio * imageHeight) / imageWidth);
---

<Picture
  class={classImg}
  src={urlForImage(asset)
    .width(adjustedWidth)
    .height(adjustedHeight)
    .quality(calidad)
    .format("webp")
    .url()}
  width={adjustedWidth}
  height={adjustedHeight}
  alt={alt}
  loading="lazy"
/>