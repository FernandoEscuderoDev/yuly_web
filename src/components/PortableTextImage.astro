---
import { urlForImage } from "./../sanity/lib/urlForImage";
import Picture from "astro/components/Picture.astro";

const {
  asset = "",
  alt = "Imagen sin texto Alternativo",
  classImg = "",
} = Astro.props;
---

<Picture
  class={classImg}
  src={urlForImage(asset).width(500).height(500).quality(80).format("webp").url()}
  width={500}
  height={500}
  alt={alt}
/>
