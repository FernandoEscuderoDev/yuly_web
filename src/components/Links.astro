---
let links = ["home", "gallery", "sketch", "post", "about"];
const currentPath = Astro.url.pathname;
const { classes, classLi } = Astro.props;
---

{
  links.map((link) => {
    const href = link === "home" ? "/" : `/${link}`;
    const isActive = currentPath === href; // Determina si el enlace estÃ¡ activo
    return (
      <li class={`flex ${classLi}`}>
        <a
          href={href}
          class={`capitalize font-medium selection:text-white ${classes} ${
            isActive
              ? "bg-clip-text text-transparent bg-gradient-to-r from-[#ff9fec] to-[#e23cc1]"
              : "text-white"
          } transition-all duration-300 ease-in-out [text-shadow:_0_2px_8px_#E200FD]`}
        >
          {link}
        </a>
      </li>
    );
  })
}
