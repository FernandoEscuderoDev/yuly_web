---
let links = ["home", "gallery", "post", "about"];
const currentPath = Astro.url.pathname;
const {classes} = Astro.props
---

{
  links.map((link) => {
    const href = link === "home" ? "/" : `/${link}`;
    const isActive = currentPath === href; // Determina si el enlace estÃ¡ activo
    return (
      <li class="flex">
        <a
          href={href}
          class={`capitalize ${classes} ${
            isActive ? "text-fuchsia-500 underline" :"text-white"
          } transition-all duration-300 ease-in-out [text-shadow:_0_2px_8px_#E200FD]`}
        >
          {link}
        </a>
      </li>
    );
  })
}

