---
import { loadQuery } from "../sanity/lib/load-query";
import { urlForImage } from "./../sanity/lib/urlForImage";
const { data: posts } = await loadQuery({
  query: `*[_type == 'sanity.imageAsset' && (title == "backgroundImage")]{url,
  "imageWidth": metadata.dimensions.width,
  "imageHeight": metadata.dimensions.height, 'alt' : alt}`,
  params: {},
});
---

<div
  class={`bg-cover bg-no-repeat bg-top w-full h-96`}
  style=`background-image: url(${urlForImage(posts[0].url).width(1920).height(960).quality(80).format("webp").url()});
  background-attachment: fixed;`
>
  <div
    class="h-full w-full backdrop-blur-sm bg-black/50 grid place-content-center text-white"
  >
    <h1 class="text-8xl md:text-9xl font-black uppercase">Post</h1>
    <p class="w-full max-w-72 md:max-w-96 ">
      Sumérgete en historias únicas e inigualables.
    </p>
  </div>
</div>
