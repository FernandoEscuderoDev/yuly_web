  Enlace copiado al portapapeles ✨
</div>

<script is:inline>
  // Constantes reutilizables
  const SELECTORS = {
    COPY_NOTIFICATION: '#copyNotification',
    SHARE_BUTTON_MOBILE: '#shareButtonMobile',
    SHARE_MENU_MOBILE: '#shareMenuMobile'
  };

  // Configuración de plataformas
  const PLATFORMS = [
    {
      ids: ['whatsappShare', 'whatsappShareMobile'],
      url: (title, url) => `https://wa.me/?text=${title} - ${url}`
    },
    {
      ids: ['twitterShare', 'twitterShareMobile'],
      url: (title, url) => `https://twitter.com/intent/tweet?text=${title}&url=${url}`
    },
    {
      ids: ['facebookShare', 'facebookShareMobile'],
      url: (title, url) => `https://www.facebook.com/sharer/sharer.php?u=${url}`
    },
    {
      ids: ['linkedinShare', 'linkedinShareMobile'],
      url: (title, url) => `https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${title}`
    }
  ];

  // Función segura para codificar
  const safeEncode = (str) => encodeURIComponent(str).replace(/[!'()*]/g, (c) => `%${c.charCodeAt(0).toString(16)}`);

  // Actualizar enlaces de forma segura
  const updateShareLinks = () => {
    const currentUrl = safeEncode(window.location.href);
    const encodedTitle = safeEncode(document.title.toUpperCase());

    PLATFORMS.forEach(({ ids, url }) => {
      ids.forEach(id => {
        const element = document.getElementById(id);
        if (element) {
          element.href = url(encodedTitle, currentUrl);
          element.rel = 'noopener noreferrer nofollow';
        }
      });
    });
  };

  // Sistema de copiado seguro
  const copyHandler = async () => {
    try {
      await navigator.clipboard.writeText(window.location.href);
      const notification = document.querySelector(SELECTORS.COPY_NOTIFICATION);
      notification.classList.remove('hidden');
      setTimeout(() => notification.classList.add('hidden'), 2000);
    } catch (err) {
      console.error("Error al copiar:", err.toString());
    }
  };

  // Gestión del menú móvil
  const toggleMobileMenu = () => {
    const menu = document.querySelector(SELECTORS.SHARE_MENU_MOBILE);
    menu.classList.toggle('hidden');
    menu.classList.toggle('opacity-0');
    menu.classList.toggle('translate-y-4');
    
    menu.style.pointerEvents = menu.classList.contains('hidden') ? 'none' : 'auto';
    if (!menu.classList.contains('hidden')) {
      menu.classList.add('opacity-100', 'translate-y-0');
    }
  };

  // Manejadores nombrados para poder removerlos
  const closeMenuHandler = (e) => {
    const menu = document.querySelector(SELECTORS.SHARE_MENU_MOBILE);
    if (!menu.classList.contains('hidden') && 
        !e.target.closest(SELECTORS.SHARE_MENU_MOBILE) && 
        !e.target.closest(SELECTORS.SHARE_BUTTON_MOBILE)) {
      toggleMobileMenu();
    }
  };

  const escapeHandler = (e) => {
    if (e.key === 'Escape' && !document.querySelector(SELECTORS.SHARE_MENU_MOBILE).classList.contains('hidden')) {
      toggleMobileMenu();
    }
  };

  // Limpieza de event listeners
  const cleanup = () => {
    window.removeEventListener('popstate', updateShareLinks);
    document.removeEventListener('click', closeMenuHandler);
    document.removeEventListener('keydown', escapeHandler);
  };

  // Inicialización de event listeners
  const initEventListeners = () => {
    const shareButton = document.querySelector(SELECTORS.SHARE_BUTTON_MOBILE);
    const copyButtons = ['copyButtonDesktop', 'copyButtonMobile'];
    
    shareButton?.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleMobileMenu();
    });

    copyButtons.forEach(id => {
      document.getElementById(id)?.addEventListener('click', copyHandler);
    });

    document.addEventListener('click', closeMenuHandler);
    document.addEventListener('keydown', escapeHandler);
  };

  // Función de inicialización principal
  const init = () => {
    cleanup();
    updateShareLinks();
    window.addEventListener('popstate', updateShareLinks);
    initEventListeners();
  };

  // Manejar View Transitions de Astro
  document.addEventListener("astro:after-swap", init);
  document.addEventListener("astro:page-load", init);

  // Inicialización inicial
  if (document.readyState === 'complete') {
    init();
  } else {
    window.addEventListener('DOMContentLoaded', init);
  }
</script>