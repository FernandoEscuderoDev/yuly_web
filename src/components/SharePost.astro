---
// components/SharePost.astro
const { title, url } = Astro.props;
---

<!-- Versión Desktop -->
<div class="hidden md:flex items-center gap-3">
  <span class="text-sm text-white">Compartir:</span>
  
  <a
    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${url}`}
    target="_blank"
    rel="noopener"
    class="p-1.5 hover:bg-fuchsia-900/20 rounded-full transition-colors"
    aria-label="Compartir en Twitter"
  >
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="#1DA1F2">
      <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
    </svg>
  </a>

  <a
    href={`https://www.facebook.com/sharer/sharer.php?u=${url}`}
    target="_blank"
    rel="noopener"
    class="p-1.5 hover:bg-fuchsia-900/20 rounded-full transition-colors"
    aria-label="Compartir en Facebook"
  >
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="#1877F2">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385h-3.047v-3.47h3.047v-2.642c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953h-1.513c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385c5.737-.9 10.125-5.864 10.125-11.854z"/>
    </svg>
  </a>

  <a
    href={`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${encodeURIComponent(title)}`}
    target="_blank"
    rel="noopener"
    class="p-1.5 hover:bg-fuchsia-900/20 rounded-full transition-colors"
    aria-label="Compartir en LinkedIn"
  >
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="#0A66C2">
      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
    </svg>
  </a>

  <button
    id="copyButtonDesktop"
    class="p-1.5 hover:bg-fuchsia-900/20 rounded-full transition-colors"
    aria-label="Copiar enlace"
  >
    <svg class="w-5 h-5 text-fuchsia-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
    </svg>
  </button>
</div>

<!-- Versión Mobile -->
<div class="md:hidden fixed z-50 top-24 right-6">
  <button
    id="shareButtonMobile"
    class="p-2.5 transition-all bg-black/80 backdrop-blur-lg border border-fuchsia-500/30 rounded-xl shadow-fuchsia-900/20 hover:border-fuchsia-400/60 hover:shadow-fuchsia-900/40 group"
    aria-label="Compartir artículo"
  >
    <svg class="w-5 h-5 text-fuchsia-400 group-hover:text-fuchsia-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
    </svg>
  </button>

  <div id="shareMenuMobile" class="hidden absolute right-0 top-[110%] flex-col gap-2 w-48 origin-top-right opacity-0 translate-y-4 transition-all duration-300 ease-out-quad bg-black/90 backdrop-blur-lg border border-fuchsia-500/20 rounded-xl p-2">
    <a
      href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${url}`}
      target="_blank"
      rel="noopener"
      class="flex items-center gap-3 px-4 py-2.5 hover:bg-fuchsia-900/10 rounded-lg transition-colors"
    >
      <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="#1DA1F2">
        <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
      </svg>
      <span class="text-sm text-fuchsia-200/90">Twitter</span>
    </a>

    <a
      href={`https://www.facebook.com/sharer/sharer.php?u=${url}`}
      target="_blank"
      rel="noopener"
      class="flex items-center gap-3 px-4 py-2.5 hover:bg-fuchsia-900/10 rounded-lg transition-colors"
    >
      <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="#1877F2">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385h-3.047v-3.47h3.047v-2.642c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953h-1.513c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385c5.737-.9 10.125-5.864 10.125-11.854z"/>
      </svg>
      <span class="text-sm text-fuchsia-200/90">Facebook</span>
    </a>

    <a
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${encodeURIComponent(title)}`}
      target="_blank"
      rel="noopener"
      class="flex items-center gap-3 px-4 py-2.5 hover:bg-fuchsia-900/10 rounded-lg transition-colors"
    >
      <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="#0A66C2">
        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
      </svg>
      <span class="text-sm text-fuchsia-200/90">LinkedIn</span>
    </a>

    <button
      id="copyButtonMobile"
      class="flex items-center gap-3 px-4 py-2.5 hover:bg-fuchsia-900/10 rounded-lg transition-colors"
    >
      <svg class="w-4 h-4 text-fuchsia-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
      <span class="text-sm text-fuchsia-200/90">Copiar URL</span>
    </button>
  </div>
</div>

<div id="copyNotification" class="hidden fixed bottom-6 right-6 px-4 py-2 bg-fuchsia-900/95 text-fuchsia-100 rounded-lg text-sm backdrop-blur-lg border border-fuchsia-500/30 shadow-lg">
  Enlace copiado al portapapeles ✨
</div>

<script is:inline>
  // Mobile
  const shareButtonMobile = document.getElementById('shareButtonMobile');
  const shareMenuMobile = document.getElementById('shareMenuMobile');
  
  // Desktop
  const copyButtonDesktop = document.getElementById('copyButtonDesktop');
  const copyButtonMobile = document.getElementById('copyButtonMobile');
  const copyNotification = document.getElementById('copyNotification');

  const copyHandler = async () => {
    try {
      await navigator.clipboard.writeText(window.location.href);
      copyNotification.classList.remove('hidden');
      setTimeout(() => copyNotification.classList.add('hidden'), 2000);
    } catch (err) {
      console.error('Error al copiar:', err);
    }
  };

  // Mobile Menu
  const toggleMobileMenu = () => {
    shareMenuMobile.classList.toggle('hidden');
    shareMenuMobile.classList.toggle('opacity-0');
    shareMenuMobile.classList.toggle('translate-y-4');
    
    if (shareMenuMobile.classList.contains('hidden')) {
      shareMenuMobile.style.pointerEvents = 'none';
    } else {
      shareMenuMobile.style.pointerEvents = 'auto';
      shareMenuMobile.classList.add('opacity-100', 'translate-y-0');
    }
  };

  shareButtonMobile.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleMobileMenu();
  });

  // Event Listeners
  copyButtonDesktop.addEventListener('click', copyHandler);
  copyButtonMobile.addEventListener('click', copyHandler);

  document.addEventListener('click', (e) => {
    if (!shareButtonMobile.contains(e.target) && !shareMenuMobile.contains(e.target)) {
      if (!shareMenuMobile.classList.contains('hidden')) {
        toggleMobileMenu();
      }
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !shareMenuMobile.classList.contains('hidden')) {
      toggleMobileMenu();
    }
  });
</script>