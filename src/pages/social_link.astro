---
export const prerender = false;
import CardSocial from "../components/CardSocial.astro";
import { Image } from "astro:assets";
import vizcacha from "../assets/images/vizcacha.webp";
import titulo from "../assets//images/titulo.webp";
import LayoutLinks from "../layouts/LayoutLinks.astro";
---

<LayoutLinks>
    <main class="flex flex-col mx-auto py-10 px-14 gap-5">
      <div class="flex flex-col items-center">
        <Image
          class="max-w-96"
          src={titulo}
          alt="YulyVP"
          quality={80}
          format="webp"
        />
        <div class="min-w-34 mx-auto">
          <h1 class="font-catchyMager text-6xl">redes</h1>
          <h2 class="text-md text-[#8D0056] tracking-[0.4em] relative bottom-3">
            follow me
          </h2>
          <a
            href="mailto:vpyuly@gmail.com"
            class="lowercase tracking-wider relative bottom-2"
            >vpyuly@gmail.com</a
          >
        </div>
      </div>
      <CardSocial />
      <Image
        class="size-52 mx-auto"
        src={vizcacha}
        alt="VizcachaVP con lentes durmiendo"
        format="webp"
        quality={80}
      />
    </main>
</LayoutLinks>
