---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

// Valores por defecto para SEO
const {
  title = "Yuly VP | Digital & Traditional Artist Portfolio",
  description = "Official portfolio of Yuly VP showcasing digital paintings, traditional sketches, and character design artwork. Explore original creations and commission options.",
  image,
  canonicalUrl = Astro.url.href,
} = Astro.props;

// Generar URL absoluta para la imagen
const fullImageUrl = image.startsWith("http")
  ? image
  : `${Astro.url.origin}${image}`;
---

<!doctype html>
<html
  lang="en"
  dir="ltr"
  class="font-rasputin scrollbar-thin scrollbar-track-fuchsia-950 scrollbar-thumb-fuchsia-700"
>
  <head>
    <!-- Metadatos básicos -->
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1"
    />
    <meta name="color-scheme" content="dark" />
    <link rel="icon" type="image/png" href="/icono.png" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Yuly VP" />
    <meta name="copyright" content="© Yuly VP" />
    <meta name="robots" content="index, follow" />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />
    <meta name="geo.region" content="ES" />
    <meta name="geo.placename" content="Spain" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:site_name" content="Yuly VP Art Portfolio" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta name="twitter:site" content="@yulyvp" />
    <meta name="twitter:creator" content="@yulyvp" />

    <!-- Apple/Safari -->
    <meta name="apple-mobile-web-app-title" content="Yuly VP" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <!-- Preconexiones -->
    <link rel="preconnect" href="https://twitter.com" crossorigin />
    <link rel="preconnect" href="https://www.facebook.com" crossorigin />
    <link rel="preconnect" href="https://www.instagram.com" crossorigin />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0D000A" />

    <ViewTransitions />
    <meta name="generator" content={Astro.generator} />
  </head>

  <body
    class="grid min-h-screen text-fuchsia-500 bg-[#0D000A] selection:bg-fuchsia-700"
  >
    <div
      class="fixed inset-0 -z-20 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#330029_100%)]"
    >
    </div>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scrollbar-gutter: stable;
  }
  body {
    grid-template-rows: auto 1fr auto;
  }
  img {
    user-select: none;
  }

  /* Blog Style */
  #textAbout ul {
    list-style: disc;
    list-style-position: inside;
  }
  #textAbout ol {
    list-style: decimal;
    list-style-position: inside;
  }
  #textAbout a {
    color: fuchsia;
    background-color: rgba(255, 0, 255, 0.2);
    text-decoration: underline;
  }
  #textAbout a:hover {
    color: rgb(248, 113, 248);
  }
  #textAbout a:visited {
    color: white;
  }
  span[style] {
    text-decoration-color: fuchsia !important;
  }
  code {
    background-color: #1e1e2f;
    width: 100%;
    color: #c3e88d;
    font-family: monospace;
    font-size: 14px;
    padding: 6px 10px;
    border-radius: 6px;
    display: inline-block;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    border: 1px solid #3a3f5c;
    white-space: pre-wrap;
  }
  del {
    text-decoration-color: fuchsia !important;
    text-decoration-style: wavy;
  }
  strong {
    color: transparent;
    background-clip: text;
    --tw-gradient-from: #ff5cde var(--tw-gradient-from-position);
    --tw-gradient-to: #ff00cc var(--tw-gradient-to-position);
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
  }
  strong::selection {
    color: #f8f8f2;
    background-clip: none;
  }
  em::selection {
    color: white;
  }

  /* Gallery Style */
  .pswp__dynamic-caption {
    color: #fff;
    width: 100%;
  }
  .pswp__dynamic-caption--aside {
    max-width: 500px;
    padding: 20px;
    margin-top: 70px;
  }
  .pswp__dynamic-caption--below {
    max-width: 700px;
    padding: 15px 0 0;
  }
  .pswp__dynamic-caption--mobile {
    background: rgba(0, 0, 0, 0.5);
    padding: 10px 15px;
  }

  @font-face {
    font-family: "Rasputin";
    src: url("/fonts/RasputinRegular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
